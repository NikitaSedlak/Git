        <Label HorizontalAlignment="Left" Margin="10,48,0,0" VerticalAlignment="Top" Width="175"/>
        <Label Content="Password" HorizontalAlignment="Left" Margin="209,48,0,0" VerticalAlignment="Top" Width="175" Foreground="White" FontSize="16"/>
        <Label Content="Name" HorizontalAlignment="Left" VerticalAlignment="Top" Width="175" Margin="10,102,0,0" Foreground="White" FontSize="16"/>
