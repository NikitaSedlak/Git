        <TextBox x:Name="tbLogin" Height="23" Margin="10,74,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" TextChanged="TextBox_TextChanged" HorizontalAlignment="Left" Width="175"/>
        <TextBox x:Name="tbPass" HorizontalAlignment="Left" Height="23" Margin="209,74,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="175"/>
        <TextBox x:Name="tbName" HorizontalAlignment="Left" Height="23" Margin="10,133,0,0" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="175"/>
