        <Label Content="Age" HorizontalAlignment="Left" VerticalAlignment="Top" Width="175" Margin="209,161,0,0" Foreground="White" FontSize="16"/>
        <Label Content="Email" HorizontalAlignment="Left" Margin="10,161,0,0" VerticalAlignment="Top" Width="175" Foreground="White" FontSize="16"/>
        <Slider x:Name="sldAge" HorizontalAlignment="Left" Margin="214,197,0,0" VerticalAlignment="Top" RenderTransformOrigin="-1.35,0.043" Width="170" Minimum="18" Maximum="130" SmallChange="1"/>
